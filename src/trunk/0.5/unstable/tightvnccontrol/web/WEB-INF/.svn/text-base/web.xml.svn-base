<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>TightVNC Control</display-name>
    <listener>
        <listener-class>uk.ac.essex.wonderland.modules.tightvnccontrol.web.servlet.TightVNCServlet</listener-class>
    </listener>
    <servlet>
        <servlet-name>TightVNCServlet</servlet-name>
        <servlet-class>uk.ac.essex.wonderland.modules.tightvnccontrol.web.servlet.TightVNCServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TightVNCServlet</servlet-name>
        <url-pattern>/browse/*</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <display-name>RequireAuth</display-name>
        <web-resource-collection>
            <web-resource-name>Access to resource actions</web-resource-name>
            <description>Access to resource actions resource requires admin</description>
            <url-pattern>/resources/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>Require an admin</description>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <description>A regular user of the system</description>
        <role-name>user</role-name>
    </security-role>
    <security-role>
        <description>A system administrator</description>
        <role-name>admin</role-name>
    </security-role>
</web-app>
